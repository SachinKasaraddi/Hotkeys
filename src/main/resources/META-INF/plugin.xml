<idea-plugin>
    <id>com.sachin.hotkeys</id>
    <name>Hotkeys</name>
    <vendor email="kasaraddisachin@gmail.com" url="https://sachinkasaraddi.com/">Sachin Kasaraddi</vendor>

    <description><![CDATA[
    This simple plugin lists all available shortcuts for Android studio.<br>
    Using these shortcuts boosts your efficiency at certain tasks in faster way.
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.android</depends>
    <depends>com.intellij.modules.androidstudio</depends>

    <vendor url="https://sachinkasaraddi.com/">Sachin Kasaraddi</vendor>


    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Hotkeys" secondary="true" icon="AllIcons.Actions.Show"  anchor="right" factoryClass="com.sachin.hotkeys.actions.KeyMapFactory"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>